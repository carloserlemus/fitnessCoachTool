extends layout.pug

block content
    style.
        img {
            border-radius: 50%;
        }
    .container
        br
        .row
            each client in clientinfo
                .card(style="width: 33%")
                    .card-header
                        .text-center
                            img(src=client.img width="200px" height="200px")
                    .card-body
                    .card-footer
                        .text-center
                            h5.card-title= `${client.name}`
                            p.card-text= `Starting Weight: ${client.weightStart} lbs`
                            a.button.btn.btn-outline-primary.btn-sm(href="/clientprofile/" + client._id)= `Overview`
                            a.button.btn.btn-outline-success.btn-sm(href="/client/edit/" + client._id)= `Edit`
                            a.button.btn.btn-outline-danger.btn-sm.delete-client(href="#", data-id=client._id)= `Delete`
    .container.text-center
        br
        a.button.btn.btn-primary.btn-block.link(href="/client/add") Add
        br