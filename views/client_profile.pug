extends layout.pug

block content
    .container
        h1= clientinfo.name
        table.table
            thead.thead-dark
                tr
                th(scope='col') Date
                th(scope='col') Steps
                th(scope='col') Hours of Sleep
                th(scope='col') Work Out
                th(scope='col') Notes
            tbody
                each client in clientreport
                    tr
                    td= client.dateReport
                    td= client.steps
                    td= client.hoursSleep
                    td= client.workOutYN
                    td= client.notes
